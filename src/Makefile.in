# @configure_input@

# Package-specific substitution variables
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)

# Prefix-specifix substitution variables
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@

# VPATH-related substitution variables
srcdir = @srcdir@
VPATH  = @srcdir@

all: cembeddedhttpd

CFLAGS = -g -O0 -L/usr/lib/x86_64-linux-gnu -lmicrohttpd

cembeddedhttpd: main.c
	$(CC) -DCFGDIR="\"$(sysconfdir)\"" -I. -I$(srcdir) -I.. -I/usr/include $(CPPFLAGS) $(CFLAGS) -o $@ $(srcdir)/main.c

clean:
	-rm cembeddedhttpd

distclean: clean
	-rm Makefile

check: all
	./cembeddedhttpd | grep "Hello from .*cembeddedhttpd!"
	@echo "*** ALL TESTS PASSED ***"

install:
	install -d $(DESTDIR)$(bindir)
	install -m 0755 cembeddedhttpd $(DESTDIR)$(bindir)

uninstall:
	-rm $(DESTDIR)$(bindir)/cembeddedhttpd

Makefile: Makefile.in ../config.status
	cd .. & ./config.status src/$@

../config.status: ../configure
	cd .. && ./config.status --recheck

.PHONY: all clean check install uninstall
